{
  "name": "@less-write/changelog",
  "type": "module",
  "version": "1.0.0",
  "description": "Custom preset for conventional-changelog.",
  "keywords": [
    "conventional-changelog",
    "custom",
    "preset"
  ],
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "less-write-changelog": "./index.full.js"
  },
  "exports": {
    ".": {
      "import": "./index.full.mjs",
      "require": "./index.full.js"
    }
  },
  "publishConfig": {
    "directory": "package",
    "linkDirectory": false
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "node ./src/index.js",
    "build": "gulp -f build/gulpfile.js",
    "clean": "rimraf dist",
    "prepublishOnly": "run clear clean-publish",
    "postpublish": "pnpm clear"
  },
  "dependencies": {
    "compare-func": "^2.0.0",
    "conventional-changelog-core": "^8.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@types/compare-func": "^1.3.3",
    "@types/conventional-changelog-core": "^4.2.8",
    "@types/gulp": "^4.0.17",
    "gulp": "^5.0.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.22.0",
    "rollup-plugin-esbuild": "^6.1.1"
  }
}
